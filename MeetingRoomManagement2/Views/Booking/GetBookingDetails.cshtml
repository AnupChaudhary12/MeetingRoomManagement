@model IEnumerable<MeetingRoomManagement2.Models.DTo.BookingModel> // Replace with your actual model namespace

<h2>Room List</h2>


<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Start Time</th>
			<th>End Time</th>
			<th>User Id</th>
			<th>Room Id</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var room in Model)
		{
			<tr>
				<td>@room.ID</td>
				<td>@room.StartTime</td>
				<td>@room.EndTime</td>
				<td>@room.UserID</td>
				<td>@room.RoomModelId</td>
				<td>
					<a asp-action="EditBooking" asp-route-id="@room.ID">Edit Booking</a> |
					<a asp-action="DeleteBooking" asp-route-id="@room.ID">Remove Booking</a> |
					<a asp-action="AddParticipant" asp-route-BookingId="@room.ID">Add Participant</a> |
				</td>

			</tr>
		}
	</tbody>
</table>

<p>
	<a asp-action="GetParticipants" class="btn btn-primary">List All Participants with Respective Booking Id</a>
</p>
